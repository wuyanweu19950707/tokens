{
  "button": {
    "comment": "iOS specific button styles",
    "figma": "https://www.figma.com/file/L67wWWZaXcvVOLEpn77adE/Components---iOS?node-id=2741%3A6797",
    "accent-ghost": {
      "#normal": {
        "background": "@theme-background-primary-ghost",
        "text": "@theme-globaltint-normal"
      },
      "#hovered": {
        "background": "@theme-button-secondary-hover",
        "text": "@theme-globaltint-normal"
      },
      "#pressed": {
        "background": "@theme-globaltint-selected",
        "text": "@theme-common-text-white"
      },
      "#disabled": {
        "background": "@theme-background-primary-ghost",
        "text": "@theme-text-primary-disabled"
      }
    },
    "ghost": {
      "#normal": {
        "background": "@theme-button-secondary-normal",
        "text": "@theme-globaltint-normal",
        "border": "none"
      },
      "#hovered": {
        "background": "@theme-button-secondary-hover",
        "text": "@theme-globaltint-normal"
      },
      "#pressed": {
        "background": "@theme-globaltint-selected",
        "text": "@theme-text-primary-normal"
      },
      "#disabled": {
        "background": "@theme-button-primary-disabled",
        "text": "@theme-text-primary-disabled"
      }
    },
    "toolbar": {
      "#normal": {
        "background": "@theme-button-secondary-normal",
        "text": "@theme-globaltint-normal",
        "border": "@theme-globaltint-normal",
        "badge": "@theme-indicator-attention"
      },
      "#pressed": {
        "background": "@theme-globaltint-selected",
        "text": "@theme-common-text-white",
        "border": "none",
        "badge": "@theme-indicator-attention"
      }
    },
    "global-plus": {
      "#normal": {
        "icon-color": "@theme-globaltint-normal"
      },
      "#hovered": {
        "background": "@theme-button-secondary-hover",
        "icon-color": "@theme-globaltint-normal"
      },
      "#pressed": {
        "background": "@theme-globaltint-normal",
        "icon-color": "@theme-common-text-white"
      }
    },
    "call-control": {
      "#normal": {
        "background": "@theme-overlay-button-secondary-normal",
        "text": "@theme-button-primary-normal"
      },
      "#hovered": {
        "background": "@theme-overlay-button-secondary-hover",
        "text": "@theme-button-primary-normal"
      },
      "#pressed": {
        "background": "@theme-overlay-button-secondary-pressed",
        "text": "@theme-button-primary-normal"
      }
    },
    "overlay": {
      "#normal": {
        "background": "@theme-background-primary-ghost",
        "text": "@theme-text-primary-normal",
        "border": "@theme-outline-button-normal"
      },
      "#hovered": {
        "background": "@theme-background-primary-ghost",
        "text": "@theme-text-primary-normal",
        "border": "@theme-outline-button-normal"
      },
      "#pressed": {
        "background": "@theme-background-primary-ghost",
        "text": "@theme-text-primary-normal",
        "border": "@theme-outline-button-normal"
      }
    }
  }
}
